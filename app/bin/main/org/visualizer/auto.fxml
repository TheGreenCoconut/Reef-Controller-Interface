<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.input.MouseEvent?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.shape.Line?>

<StackPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.visualizer.AutoController" alignment="CENTER" fx:id="rootPane">
    <Circle fx:id="A" radius="40" fill="black" translateX="-50" translateY="150" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineA"/>
    <Text fx:id="textA" text="A" fill="white" translateX="-50" translateY="150" mouseTransparent="true" style="-fx-font-size: 24px;"/>

    <Circle fx:id="B" radius="40" fill="black" translateX="50" translateY="150" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineB"/>
    <Text fx:id="textB" text="B" fill="white" translateX="50" translateY="150" mouseTransparent="true" style="-fx-font-size: 24px;"/>

    <Circle fx:id="C" radius="40" fill="black" translateX="120" translateY="80" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineC"/>
    <Text fx:id="textC" text="C" fill="white" translateX="120" translateY="80" mouseTransparent="true" style="-fx-font-size: 24px;"/>

    <Circle fx:id="D" radius="40" fill="black" translateX="190" translateY="10" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineD"/>
    <Text fx:id="textD" text="D" fill="white" translateX="190" translateY="10" mouseTransparent="true" style="-fx-font-size: 24px;"/>

    <Circle fx:id="E" radius="40" fill="black" translateX="190" translateY="-90" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineE"/>
    <Text fx:id="textE" text="E" fill="white" translateX="190" translateY="-90" mouseTransparent="true" style="-fx-font-size: 24px;"/>

    <Circle fx:id="F" radius="40" fill="black" translateX="120" translateY="-160" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineF"/>
    <Text fx:id="textF" text="F" fill="white" translateX="120" translateY="-160" mouseTransparent="true" style="-fx-font-size: 24px;"/>

    <Circle fx:id="G" radius="40" fill="black" translateX="50" translateY="-230" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineG"/>
    <Text fx:id="textG" text="G" fill="white" translateX="50" translateY="-230" mouseTransparent="true" style="-fx-font-size: 24px;"/>

    <Circle fx:id="H" radius="40" fill="black" translateX="-50" translateY="-230" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineH"/>
    <Text fx:id="textH" text="H" fill="white" translateX="-50" translateY="-230" mouseTransparent="true" style="-fx-font-size: 24px;"/>

    <Circle fx:id="I" radius="40" fill="black" translateX="-120" translateY="-160" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineI"/>
    <Text fx:id="textI" text="I" fill="white" translateX="-120" translateY="-160" mouseTransparent="true" style="-fx-font-size: 24px;"/>

    <Circle fx:id="J" radius="40" fill="black" translateX="-190" translateY="-90" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineJ"/>
    <Text fx:id="textJ" text="J" fill="white" translateX="-190" translateY="-90" mouseTransparent="true" style="-fx-font-size: 24px;"/>

    <Circle fx:id="K" radius="40" fill="black" translateX="-190" translateY="10" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineK"/>
    <Text fx:id="textK" text="K" fill="white" translateX="-190" translateY="10" mouseTransparent="true" style="-fx-font-size: 24px;"/>

    <Circle fx:id="L" radius="40" fill="black" translateX="-120" translateY="80" onMouseClicked="#handleCircleClick"/>
    <Line fx:id="lineL"/>
    <Text fx:id="textL" text="L" fill="white" translateX="-120" translateY="80" mouseTransparent="true" style="-fx-font-size: 24px;"/>


    <StackPane fx:id="buttonGraphics" visible="false">
        <Rectangle width="230" height="75" arcWidth="20" arcHeight="20" fill="lightgray" mouseTransparent="true"/>
        <HBox fx:id="buttonContainer" spacing="0" alignment="CENTER"/>
    </StackPane>

    <ListView fx:id="listView" maxWidth="150" maxHeight="400" 
              StackPane.alignment="CENTER_RIGHT"/>

    <AnchorPane pickOnBounds="false">
        <HBox fx:id="leftStations" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10">
            <Button fx:id="S6" text="S6" onAction="#handleStationClick"
                prefWidth="50" prefHeight="100" minWidth="50" minHeight="100"/>
            <Button fx:id="S5" text="S5" onAction="#handleStationClick"
                prefWidth="50" prefHeight="100" minWidth="50" minHeight="100"/>
            <Button fx:id="S4" text="S4" onAction="#handleStationClick"
                prefWidth="50" prefHeight="100" minWidth="50" minHeight="100"/>
        </HBox>
        
        <HBox fx:id="rightStations" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10">
            <Button fx:id="S1" text="S1" onAction="#handleStationClick"
                prefWidth="50" prefHeight="100" minWidth="50" minHeight="100"/>
            <Button fx:id="S2" text="S2" onAction="#handleStationClick"
                prefWidth="50" prefHeight="100" minWidth="50" minHeight="100"/>
            <Button fx:id="S3" text="S3" onAction="#handleStationClick"
                prefWidth="50" prefHeight="100" minWidth="50" minHeight="100"/>
        </HBox>
    </AnchorPane>
</StackPane>
